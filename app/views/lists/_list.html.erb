<div data-controller="list" data-list-id-value="<%= list.id %>" data-list-stream-tag-value="<%= list.stream_tag %>" class="flex-1 max-w-lg min-w-80 rounded-md m-2 bg-gray-100 p-4">

  <div class="flex space-x-3 pb-4">
    <form data-action="list#updateName focusout->list#updateName" class="flex-grow">
      <input data-list-target="name" placeholder="Fill the name here..." type="text" maxlength="24" class="name" value="<%= list.name %>">
    </form>

    <%= render 'shared/dropdown' do %>
      <button data-action="list#delete" class="text-left font-semibold w-full block py-2 leading-5 text-red-700 hover:bg-gray-100 hover:text-red-900 focus:outline-none focus:bg-gray-100 focus:text-red-900">
        <div class="px-4">Delete</div>
      </button>
    <% end %>
  </div>

  <%= render 'cards/form', list: list %>

  <div data-list-target="cards" class="flex flex-col space-y-2 py-4">
    <%= render list.cards %>
  </div>
</div>

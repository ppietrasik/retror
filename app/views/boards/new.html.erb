<div class="flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-12 text-center text-3xl leading-9 font-extrabold text-gray-900">
      Create new retrospective session
    </h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with model: @board do |form| %>
        <div>
           <%= form.label(:name, 'Name', class: 'block text-sm font-medium leading-5 text-gray-700') %>
          <div class="mt-1 rounded-md shadow-sm">
            <%= form.text_field(:name, class: 'default', placeholder: 'e.g. Sprint 17', required: true) %>
          </div>
        </div>
        <div class="mt-6">
          <span class="block w-full rounded-md shadow-sm">
            <%= form.submit('Create', class: 'w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out') %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>

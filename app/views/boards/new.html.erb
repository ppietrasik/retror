<div class="flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-12 text-center text-3xl leading-9 font-extrabold text-gray-900">
      <%= t '.title' %>
    </h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with model: board do |form| %>
        <div>
           <%= form.label(:name, t('.name_label'), class: 'block text-sm font-medium leading-5 text-gray-700') %>
          <div class="mt-1 rounded-md shadow-sm">
            <%= form.text_field(:name, class: 'default', placeholder: 'e.g. Sprint 17') %>
          </div>
        </div>

        <div class="relative flex items-start mt-4">
          <div class="flex items-center h-5">
             <%= form.check_box(:default_setup, class: 'w-4 h-4 border-gray-300 transition duration-300 rounded focus:ring-2 focus:ring-offset-0 focus:outline-none focus:ring-blue-200', checked: true) %>
          </div>
          <div class="ml-3 text-sm leading-5">
            <%= form.label(:default_setup, t('.default_setup_check'), class: 'block text-sm font-medium leading-5 text-gray-700') %>
          </div>
        </div>

        <div class="mt-6">
          <span class="block w-full rounded-md shadow-sm">
            <%= form.submit(t('.create_button'), class: 'w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700 transition duration-150 ease-in-out') %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
